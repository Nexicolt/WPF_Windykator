<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Słownik z stylami wykorzystywanymi w wielu zakładkach (uniknięcie powtarzania kodu)  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="WorkspaceDefaultStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Styl dla napisu, w przyciskach na dole  -->
    <Style x:Key="BottomButtonTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

</ResourceDictionary>