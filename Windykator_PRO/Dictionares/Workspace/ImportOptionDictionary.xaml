<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Słownik z stylami wykorzystywanymi w wielu zakładkach (uniknięcie powtarzania kodu)  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="WorkspaceDefaultStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="FindFileButton"
        BasedOn="{StaticResource DarkModeButton}"
        TargetType="{x:Type Button}">
        <Setter Property="Width" Value="100" />
    </Style>

    <Style
        x:Key="ImportClinetsButton"
        BasedOn="{StaticResource DarkModeButton}"
        TargetType="{x:Type Button}">
        <Setter Property="Width" Value="250" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>

