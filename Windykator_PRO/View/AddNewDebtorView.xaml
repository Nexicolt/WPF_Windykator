<UserControl
    x:Class="Windykator_PRO.View.AddNewDebtorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Windykator_PRO.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="500"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Dictionares/AddNewDebtorDictionary.xaml" />
    </UserControl.Resources>

    <Grid Margin="20,10,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="35" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource FiltersTextBlock}" Text="Nazwa: " />

            <TextBox
                Grid.Column="2"
                Grid.ColumnSpan="6"
                Style="{StaticResource TextBoxDark}" />


            <TextBlock
                Grid.Row="2"
                Style="{StaticResource FiltersTextBlock}"
                Text="Miasto:" />
            <TextBox
                Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource TextBoxDark}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="4"
                Style="{StaticResource FiltersTextBlock}"
                Text="Ulica:" />
            <TextBox
                Grid.Row="2"
                Grid.Column="6"
                Style="{StaticResource TextBoxDark}" />

            <Grid Grid.Row="4" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,0,9.2"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource FiltersTextBlock}"
                    Text="Typ dłużnika:" />

                <Grid Grid.Row="8" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <RadioButton Content="Osoba fizyczna" Style="{StaticResource FiltersRadioButton}" />
                    <RadioButton
                        Grid.Column="2"
                        Content="Firma"
                        Style="{StaticResource FiltersRadioButton}" />
                </Grid>

            </Grid>

            <Grid
                Grid.Row="4"
                Grid.Column="4"
                Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,0,9.2"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource FiltersTextBlock}"
                    Text="Klient zagraniczny:" />

                <Grid Grid.Row="8" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <RadioButton Content="Tak" Style="{StaticResource FiltersRadioButton}" />
                    <RadioButton
                        Grid.Column="2"
                        Content="Nie"
                        Style="{StaticResource FiltersRadioButton}" />
                </Grid>

            </Grid>

            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Style="{StaticResource FiltersTextBlock}"
                Text="Bank:" />
            <TextBox
                Grid.Row="6"
                Grid.Column="2"
                Style="{StaticResource TextBoxDark}" />

            <TextBlock
                Grid.Row="6"
                Grid.Column="4"
                Style="{StaticResource FiltersTextBlock}"
                Text="IBAN:" />
            <TextBox
                Grid.Row="6"
                Grid.Column="6"
                Style="{StaticResource TextBoxDark}" />


            <TextBlock
                Grid.Row="8"
                Style="{StaticResource FiltersTextBlock}"
                Text="Numer konta: " />

            <TextBox
                Grid.Row="8"
                Grid.Column="2"
                Grid.ColumnSpan="6"
                Style="{StaticResource TextBoxDark}" />

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                FontWeight="Black"
                Style="{StaticResource FiltersTextBlock}"
                Text="PARAMETRY" />
            <StackPanel Grid.Row="2">
                <CheckBox Content="Zainicjalizuj pustę sprawę dla dłużnika" Style="{StaticResource FiltersCheckBox}" />
                <TextBlock />
                <CheckBox Content="Otwóz okno dowiązywania sprawy, po utworzeniu dłużnika" Style="{StaticResource FiltersCheckBox}" />
                <TextBlock />
                <CheckBox Content="Zainicjalizuj dłużnika, jako niewypłacalnego" Style="{StaticResource FiltersCheckBox}" />

            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="2">
                <Button Content="Dodaj klienta" Style="{StaticResource BottomButton}" />
                <TextBlock />
                <Button Content="Anuluj" Style="{StaticResource BottomButton}" />
            </StackPanel>

        </Grid>
    </Grid>

</UserControl>
